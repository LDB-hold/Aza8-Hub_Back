# === Runtime ===
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# === Database ===
# Supabase Postgres connection string (service_role for dev/staging in MVP)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public

# Optional: for migrations in environments where you use a direct (non-pooler) URL
DIRECT_URL=

# === JWT (RS256) ===
# Use PEM strings. If you paste multi-line keys in .env, keep \n escaped.
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\\n...\\n-----END PUBLIC KEY-----"

# === Observability (optional) ===
SENTRY_DSN=

# === Metrics (restricted) ===
# Token required to access GET /metrics
METRICS_TOKEN=
